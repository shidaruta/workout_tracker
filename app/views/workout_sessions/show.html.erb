<h2>Workout on <%= @workout_session.date %></h2>

<% if @workout_session.workout_entries.empty? %>
  <p>No entries logged for this session yet.</p>
<% else %>
  <% @workout_session.workout_entries.each do |entry| %>
    <p>
      <%= entry.exercise.name %>: <%= entry.sets %> Ã— <%= entry.reps %> -- <%= entry.weight %> kg
    </p>
  <% end %>
<% end %>

<h3>Add a new entry:</h3>
<%= render 'workout_entries/form', 
          workout_session: @workout_session, 
          workout_entry: @workout_session.workout_entries.new, 
          exercises: Exercise.all %>
<%= link_to "Back", workout_sessions_path, class: "btn btn-secondary" %>
